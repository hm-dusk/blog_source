<% if (post.date) { %>
    <div class="<%= class_name %>">
        <a href="<%- url_for(post.path) %>" class="<%= class_name %>">
            ✎发表于<time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, date_format) %></time>
            &#10084;更新于<time datetime="<%= date_xml(post.updated) %>" itemprop="datePublished"><%= date(post.updated, date_format) %></time>
        </a>
    </div>
<% } %>